{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "docker:enableMajor"],
  "ignorePaths": [],
  "postUpdateOptions": ["gomodTidy"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile[^/]*$",
        "Makefile"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?\\s*.*_VERSION *[:?]?\\= *(?<currentValue>.+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^(?<version>.+)${{/if}}"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "matchPackageNames": [
        "/^github\\.com/aws/aws\\-sdk\\-go\\-v2/",
        "/^go\\.k6\\.io/k6$/",
        "/^go\\.k6\\.io/xk6$/",
        "/^grafana/k6$/",
        "/^nginx$/",
        "/^docker$/",
        "/^golang$/",
        "/^ubuntu$/"
      ]
    }
  ]
}
